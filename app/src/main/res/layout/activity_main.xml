<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Display da Calculadora -->
    <TextView
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#E0E0E0"
        android:gravity="end"
        android:textSize="32sp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botões numéricos e operações -->

    <Button
        android:id="@+id/button_1"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/button_2"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@+id/button_3"
        app:layout_constraintStart_toEndOf="@id/button_1"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button_3"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:text="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_2"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button_add"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_clear"
        app:layout_constraintVertical_bias="0.057"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/button_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button_5"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@+id/button_6"
        app:layout_constraintStart_toEndOf="@id/button_4"
        app:layout_constraintTop_toBottomOf="@id/button_2"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button_6"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:text="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_5"
        app:layout_constraintTop_toBottomOf="@id/button_3"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button_subtract"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/button_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_7"
        app:layout_constraintVertical_bias="0.333"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/button_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_4"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button_8"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@+id/button_9"
        app:layout_constraintStart_toEndOf="@id/button_7"
        app:layout_constraintTop_toBottomOf="@id/button_5"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button_9"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:text="9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_8"
        app:layout_constraintTop_toBottomOf="@id/button_6"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="32dp"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@+id/button_equals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:text="C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_9"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/button_clear"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toEndOf="@+id/button_subtract"
        app:layout_constraintTop_toBottomOf="@+id/button_8"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_equals"
        android:layout_width="321dp"
        android:layout_height="74dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="24dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="75dp"
        android:layout_height="113dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="112dp"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toEndOf="@+id/button_multiply"
        app:layout_constraintTop_toBottomOf="@+id/button_clear"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>
